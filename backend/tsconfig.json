{
  "compilerOptions": {
    /* ğŸ”§ MÃ³dulo e saÃ­da */
    "target": "ES2022",
    "module": "NodeNext",
    "rootDir": "src",
    "outDir": "dist",

    /* ğŸ“š Suporte moderno e compatibilidade */
    "lib": ["ES2022"],
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* âš™ï¸ Qualidade e seguranÃ§a do cÃ³digo */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    /* ğŸ§© Alias e import paths */
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },

    /* ğŸ§  Tipos globais */
    "types": ["node", "express", "vitest/globals"],

    /* ğŸš€ OtimizaÃ§Ã£o de build */
    "skipLibCheck": true,
    "incremental": true
  },

  /* ğŸ“¦ InclusÃµes e exclusÃµes */
  "include": [
    "src/**/*",
    "src/types/**/*",
    "/src/infra/log/logger"
  ],
  "exclude": ["node_modules", "dist"]
}
