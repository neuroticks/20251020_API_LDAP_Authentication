    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "ldapts": "^8.0.9",
    "pino": "^10.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3",
